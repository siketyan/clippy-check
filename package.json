{
    "name": "rust-clippy-check",
    "version": "1.0.7",
    "private": false,
    "description": "Run clippy and annotate the diff with errors and warnings",
    "main": "dist/index.js",
    "scripts": {
        "pack": "cp -r .matchers ./dist/",
        "build": "tsc",
        "format": "prettier --write 'src/**/*.ts' '__tests__/**/*.ts'",
        "lint": "tsc --noEmit && eslint 'src/**/*.ts' '__tests__/**/*.ts'",
        "watch": "rm -rf ./dist/* && ncc build src/main.ts --watch",
        "test": "jest --passWithNoTests"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/ructions/clippy-check.git"
    },
    "keywords": [
        "actions",
        "rust",
        "cargo"
    ],
    "author": "ructions",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/ructions/clippy-check/issues"
    },
    "dependencies": {
        "@actions/cache": "^2.0.4",
        "@actions/core": "^1.8.2",
        "@actions/exec": "^1.1.1",
        "@actions/github": "^5.0.3",
        "@actions/http-client": "^2.0.1",
        "string-argv": "^0.3.1"
    },
    "devDependencies": {
        "@types/jest": "28.1.6",
        "@types/node": "16.11.48",
        "jest": "28.1.3",
        "jest-circus": "28.1.3",
        "prettier": "2.7.1",
        "ts-jest": "28.0.8",
        "typescript": "4.7.4"
    }
}
